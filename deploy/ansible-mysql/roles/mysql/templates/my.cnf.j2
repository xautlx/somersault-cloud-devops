[mysql]
socket={{mysql_run_path}}/mysql.sock
default-character-set=utf8mb4
[client]
socket={{mysql_run_path}}/mysql.sock

[mysqld]
# MySQL8.0.4开始，默认身份认证开始改变。因为之前，MySQL的密码认证插件是“mysql_native_password”，而现在使用的是“caching_sha2_password”
default_authentication_plugin=mysql_native_password

# Replication
server-id = {{ mysql_server_id }}
log-slave-updates
slave_skip_errors = ddl_exist_errors
sync_binlog=1
master_info_repository = TABLE
relay_log_info_repository = TABLE
relay_log_recovery = 1
slave-rows-search-algorithms = 'INDEX_SCAN,HASH_SCAN'

#------------------------------------
#GTID Settings GTID 同步复制设置
#------------------------------------
gtid_mode=on  #开启GTID同步
enforce_gtid_consistency=on #强制事务一致，确保 GTID 的安全，在事务中就不能创建和删除临时表
binlog_gtid_simple_recovery=1 #这个变量用于在 MySQL 重启或启动的时候寻找 GTIDs 过程中，控制 binlog 如何遍历的算法

#------------------------------------
#避免主键冲突设置
#------------------------------------
auto_increment_increment={{groups['mysql'] | length}}  #自增主键步长，通常有几个主库A就写几，避免主键冲突
auto_increment_offset={{mysql_server_id}}  #设置自增主键起始值，第一个主库A为1，第二个主库A为2，以此类推

# basic settings #
user = {{mysql_user}}
character_set_server=utf8mb4
collation-server=utf8mb4_unicode_ci
symbolic-links=0
datadir = {{mysql_dbfile_path}}
socket = {{mysql_run_path}}/mysql.sock
pid-file = {{mysql_run_path}}/mysql.pid
tmpdir={{mysql_tmpfile_path}}

transaction_isolation = READ-COMMITTED
explicit_defaults_for_timestamp = 1
max_allowed_packet = 64M
#show_compatibility_56 = ON
open_files_limit = 65535
lower_case_table_names = 1

# connection #
skip_name_resolve = 1
#按实际需要设定
max_connections = 2048
max_connect_errors = 1000000
back_log = 1024

# table cache performance settings
table_open_cache = 4096
table_definition_cache = 1024
table_open_cache_instances = 16

# session memory settings #
read_buffer_size = 8M
read_rnd_buffer_size = 8M
sort_buffer_size = 8M
tmp_table_size = 64M
join_buffer_size = 32M
thread_cache_size = 64

# log settings #
#按实际情况设定binlog目录及文件名
log-error = {{mysql_log_path}}/mysqld-error.log
log-bin = {{mysql_binlog_path}}/mysql-bin
relay_log={{mysql_relaylog_path}}/mysql-relay-bin
slow_query_log = 1
slow_query_log_file = {{mysql_log_path}}/slow.log

#根据实际情况设定慢查询时间
long_query_time = 2
log_queries_not_using_indexes = 1
log_slow_admin_statements = 1
log_slow_slave_statements = 1
log_throttle_queries_not_using_indexes = 10
log_timestamps = system
expire-logs-days = 14
binlog_format = row
binlog-rows-query-log-events = 1
log-bin-trust-function-creators = 1

# innodb settings #
#根据实际物理内存配置，一般为物理内存的60%
innodb_buffer_pool_size = {{ innodb_buffer_pool_size }}

# 根据您的服务器IOPS能力适当调整
#机械硬盘按200每颗盘计算
# 一般配普通SSD盘的话，可以调整到 10000 - 20000
# 配置高端PCIe SSD卡的话，则可以调整的更高，比如 50000 - 80000
innodb_io_capacity = 4000
innodb_io_capacity_max = 8000

innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT

innodb_data_file_path = ibdata1:1G:autoextend
innodb_file_per_table = 1
#根据实际情况自定义目录
innodb_undo_directory = ./
#innodb_undo_logs = 128
innodb_undo_log_truncate = 1
innodb_max_undo_log_size = 4G

#SSD硬盘设置成0，机械硬盘为1
innodb_flush_neighbors = 0

#根据实际情况自定义目录
innodb_log_group_home_dir = ./
innodb_log_file_size = 1G
innodb_log_files_in_group = 4
innodb_log_buffer_size = 64M

innodb_print_all_deadlocks = 1
innodb_strict_mode = 1

innodb_stats_persistent_sample_pages = 64
innodb_autoinc_lock_mode = 2
innodb_sort_buffer_size = 128M
innodb_online_alter_log_max_size=1G
innodb_open_files= 65535
loose_innodb_numa_interleave = 1
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

